@import './../../variables.styl'

.root
	width: 35%
	margin: 0 auto
	padding: 40px
	background: #fff
	border-radius: 3px
	box-shadow: 0 0 16px 3px #e2e2e2

.fieldLogin,
.fieldPassword
	text-align: left
	margin-bottom: 30px

.label
	margin-bottom: 5px

.btnLogin
	padding: 10px
	width: 100%
	background: $main_color
	color: #fff
	cursor: pointer
	border-radius: 3px

	&:hover
		background: darken($main_color, 10)

.input
	width: 100%
	border: 1px solid #9da0a4
	border-radius: 3px
	padding: 8px 5px
	box-sizing: border-box
	font-size: 14px

// elements

// modifiers

//media

@media (max-width: 768px) {
	.root {
		width: 100%;
	}
}
